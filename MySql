mysql -u root -p
password

/*Databases to be created*/
create databses cmad_blog;
USE cmad_blog;

/* Tables to be created */
CREATE TABLE USERS (USER_ID INT NOT NULL PRIMARY KEY AUTO_INCREMENT, 
EMAIL_ID VARCHAR(100) NOT NULL UNIQUE,
NAME VARCHAR(100),
PASSWORD VARCHAR(30) NOT NULL);

CREATE TABLE POSTS (POST_ID INT NOT NULL PRIMARY KEY AUTO_INCREMENT, 
POST_TITLE VARCHAR(200) NOT NULL UNIQUE,
POST_DATE DATETIME,
POST_ABOUT LONGTEXT NOT NULL,
POST_TAGS VARCHAR(32),
EMAIL_ID VARCHAR(100) NOT NULL);

CREATE TABLE COMMENTS (COMMENT_ID INT NOT NULL PRIMARY KEY AUTO_INCREMENT, 
CONTENT LONGTEXT NOT NULL,
COMMENT_DATE DATETIME,
AUTHOR_NAME VARCHAR(100),
AUTHOR_EMAIL VARCHAR(100),
POST_ID INT DEFAULT NULL,
FOREIGN KEY (POST_ID) REFERENCES POSTS(POST_ID));
/* End of Tables to be created */

CREATE TABLE POSTS (POST_ID INT NOT NULL PRIMARY KEY AUTO_INCREMENT, 
POST_TITLE VARCHAR(200) CHARACTER SET utf8 NOT NULL UNIQUE,
POST_DATE DATETIME,
POST_ABOUT VARCHAR(200) CHARACTER SET utf8 NOT NULL,
POST_TAGS VARCHAR(32),
USER_ID INT DEFAULT NULL,
FOREIGN KEY (USER_ID) REFERENCES USERS(USER_ID));
